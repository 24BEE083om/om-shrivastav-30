def string_length(s):
    # Base case: if the string is empty, return 0
    if s == "":
        return 0
    
    # Recursive step: 1 (for the first character) + length of the rest of the string
    return 1 + string_length(s[1:])

# Example usage:
my_string = "Hello, world!"
print(string_length(my_string))  # Output will be 13
